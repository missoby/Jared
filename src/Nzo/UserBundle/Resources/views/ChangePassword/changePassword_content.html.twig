<form action="{{ path('fos_user_change_password') }}" method="post">
    <fieldset>
        <legend class="colorlegend"><strong>Change Your Password</strong></legend>
        <h6 class="style_h">Please enter a new Password:</h6>
        {% if form_errors(form)  %}
            <div class="alert alert-error text-center"> {{form_errors(form)}} </div> 
        {% endif %}
        
        {#--Current Password---#}
        <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            {{ form_widget(form.current_password,{'attr': {'class': 'span3','placeholder': 'Current Password'}}) }}
        </div>
        
        {% if form_errors(form.current_password) %}
            <div class="error-input"> {{form_errors(form.current_password)}} </div> 
        {% endif %}
            
        {#--New Password---#}
        <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            {{ form_widget(form.plainPassword.first,{'attr': {'class': 'span3','placeholder': 'New Password'}}) }}
        </div>            
        {% if form_errors(form.plainPassword.first)  %}
            <div class="error-input"> {{form_errors(form.plainPassword.first)}} </div> 
        {% endif %}

        {#--Confirmation New Password---#}
        <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            {{ form_widget(form.plainPassword.second,{'attr': {'class': 'span3','placeholder': 'New Password Confirmation'}})}}
        </div>
        {{ form_rest(form) }}
        <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" name="_submit" class="btn btn-primary pull-right">  
    </fieldset>
 </form>