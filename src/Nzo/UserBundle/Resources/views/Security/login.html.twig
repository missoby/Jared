{% extends "NzoJaredBundle::layout.html.twig" %}


{% block title %} {{ parent() }} - Login{% endblock %}

{% block content %}
    
     <div class="main">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="box login">
                <fieldset class="boxBody">
                    <h2>Login</h2>
                    {% if error %}
                       <div class="validation">{{ error|trans({}, 'FOSUserBundle') }}</div>
                    {% endif %}
                    
                    <label for="username">Login</label>	         
                    <input type="text" name="_username" value="{{ last_username }}"/>
                    <label for="password">Password</label>
                    <input type="password" name="_password" />
                    <a href="{{path('fos_user_resetting_request')}}">Forget Password ?</a>
                </fieldset>
                <footer>
                    <label><input type="checkbox" id="remember_me" name="_remember_me" value="on" style="margin: 2px;"/>Remember me</label>
                    <input type="submit" tabindex="4" name="_submit" value="Login" class="btnLogin">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                </footer>
            </form>
    </div>
    
{% endblock content %}
